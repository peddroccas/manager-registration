generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Status {
  NEW
  ACCEPTED
  DENIED
}

model Requester {
  id           String @id @default(uuid())
  email        String
  body         String
  abbreviation String
  status       Status @default(NEW)

  @@map("requesters")
}

model Registered {
  id           String  @id @default(uuid())
  firstName    String?
  lastName     String?
  fullName     String?
  email        String
  body         String
  abbreviation String
  status       Status  @default(NEW)

  etirEmail String?
  hasPgpKey String?
  etirPhone String?

  @@map("registereds")
}
